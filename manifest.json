{
  "manifest_version": 2,
  "name": "My Cross-Browser Extension",
  "version": "1.0",
  "description": "A browser extension for Chrome & Firefox",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "myextension@mydomain.com"
    }
  }
}
